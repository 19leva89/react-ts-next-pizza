{
  "version": 2,
  "builds": [
    {
      "src": "next.config.js",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/image",
      "dest": "/app/api/image"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    },
    "commands": {
      "postinstall": "npm rebuild sharp"
    }
  },
  "functions": {
    "app/api/image/route.ts": {
      "maxDuration": 10
    }
  }
}
